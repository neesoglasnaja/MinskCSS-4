.smaller
    font-size .85em
.smallest
    font-size 0.55em

.half
    width 70%
    
iframe
    border 1px solid #aaa

#cover
    text-align right
    &:after
        opacity 0
    h2
        margin:0;
        color:#FFF;
        font-size:80px;
        display:inline-block;
        max-width: 80%;
        text-align center
        text-shadow 0 0 40px black, 0 0 40px black, 0 0 40px black, 0 0 40px black, 0 0 40px black, 0 0 40px black, 0 0 40px black
    p
        margin:300px 0 0;
        text-align:right;
        color:#FFF;
        font-size: 24px
        opacity 0.75
        line-height: 1.4
        text-shadow 0 0 20px black, 0 0 20px black, 0 0 20px black, 0 0 20px black, 0 0 20px black
        a
            color:#FFF;
            
.cover
    img
        width: auto;
        height: auto;
        min-width: 100%;
        min-height: 100%;   
    h2
        color: #FFF;     
        
.img-full
    text-align center
    img
        position: absolute;
        top: 0;
        bottom: 0;
        margin-left -25%
    
        
.end-link
    bottom: 10%
    position: absolute
    width: 100%
    padding: 0 35px
    font-size: 24px
    line-height: 1.8
    color: #aaa
    a
        color: #fff
.bigger
    font-size: 53px
    
.logo
    width 150px
    background-color: #fff
    padding: 10px
    margin-top: 150px
    & + &
        margin-left 50px

.warning 
    width 200px;
    height 40px
    position absolute
    top 105px
    right 200px
    border 3px solid red